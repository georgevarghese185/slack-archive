{
  "name": "slack-archive",
  "version": "0.1.0",
  "description": "A webapp to backup content in a Slack Workspace",
  "scripts": {
    "start:dev": "ENV=dev npm-run-all --parallel mockSlack:start express:dev",
    "start:prod": "ENV=prod npm run express:prod",
    "test": "nyc mocha --config .mocharc.all.json",
    "test:unit": "nyc mocha --config .mocharc.unit.json",
    "test:integration": "nyc mocha --config .mocharc.integ.json",
    "test:report": "nyc report --reporter=html",
    "mockSlack:start": "nodemon -w test/mockSlack --require dotenv/config test/mockSlack",
    "mockSlack:generate": "node test/mockSlack/data/generator/generate.js",
    "express:dev": "nodemon -w src -w .env --require dotenv/config src/server/express",
    "express:prod": "node src/server/express",
    "db:clear": "node --require dotenv/config scripts/clearDb.js",
    "db:migration:run": "sequelize-cli db:migrate --url $DB_URL --migrations-path src/models/implementations/sequelize/migrations",
    "db:migration:undo": "sequelize-cli db:migrate:undo --url $DB_URL --migrations-path src/models/implementations/sequelize/migrations",
    "db:migration:undo:all": "sequelize-cli db:migrate:undo:all --url $DB_URL --migrations-path src/models/implementations/sequelize/migrations",
    "db:migration:generate": "sequelize-cli migration:generate --url $DB_URL --migrations-path src/models/implementations/sequelize/migrations"
  },
  "author": "George Varghese M",
  "license": "UNLICENSE",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-sorted": "^0.2.0",
    "deep-equal-in-any-order": "^1.0.28",
    "dotenv": "^8.2.0",
    "mocha": "^8.1.1",
    "moxios": "^0.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cookie": "^0.4.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "query-string": "^6.13.1",
    "sequelize": "^6.3.4",
    "sequelize-cli": "^6.2.0",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  }
}
